<%- include('partials/header.ejs') %>

  <!-- Load Blogs -->
  <div class="album py-5 bg-body-tertiary">
    <div class="container">    
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% content.forEach(blog => { %>
          <div class="col">
            <div class="card shadow-sm">
              <img src="<%= blog.blogImage %>" class="card-img-top" alt="Blog Image">
              <div class="card-body">
                <h1 class="display-5 fw-bold text-body-emphasis d-flex justify-content-center"><%= blog.blogTitle %></h1>
                <p class="card-text"><%= blog.blogDescription %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a class="btn btn-sm btn-secondary" href="/viewBlog/<%= blog.id %>">View</a>
                    <a class="btn btn-sm btn-primary" href="/editBlog/<%= blog.id %>">Edit</a>
                    <form action="/deleteBlog/<%= blog.id %>" method="post" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger">Delete</a>
                    </form>
                  </div>
                  <small class="text-body-secondary">9 mins</small>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
        </div>
    </div>
  </div>
  

  <div class="container my-5 col-6">
    <div class="position-relative p-5 text-center text-muted bg-body border border-dashed bg-body-tertiary rounded-5">
        <h1 class="display-5 fw-bold text-body-emphasis">New Article</h1>
        <form action="/createBlog" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="formFile" class="form-label fw-bold text-left">Blog Image</label>
                <input class="form-control" type="file" id="formFile" name="blogImage">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label fw-bold text-left">Title</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="blogTitle">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label fw-bold text-left">Blog Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="blogDescription"></textarea>
            </div>
            <button class="btn btn-primary px-5 mb-2" type="submit">Submit</button>
        </form>
    </div>
  </div>

<%- include('partials/footer.ejs') %>
